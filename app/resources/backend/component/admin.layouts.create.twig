{% extends "layout/layout.twig"%}

{% block body %}
	{% if get.error %}
	<div class="alert alert-danger" role="alert"> 
	<strong>Oh snap!</strong> You didn't fill out a field when submitting, please retry.</div>
	{% endif %}
	{% if get.success %}
	<div class="alert alert-success" role="alert"> 
	<strong>Success!</strong> '{{get.success}}' was successfully created.</div>
	{% endif %}
	<form action="save" method="post" class="save-layout">
		<p class="control">
		<input required required="" name="title" class="page-title no-input input is-large" placeholder="Layout Name" type="text">
		</p>
		<br/>

		<div class="columns">
			<div class="column is-7 component-list">
				<h5 class="title is-5">Your Components</h5>
				{% for component in components %}
					
					<article class="media">
				        <div class="media-content">
				          <div class="content">
				            <p>
					            <strong>{{component.title|capitalize}}</strong> 
					            <small style="float:right;"><a href="#" data-name="{{component.title}}" class="list-group-item">Add</a></small>
				            </p>
				          </div>
				        </div>
				      </article>
				{% endfor %}
			</div>
			<div class="column is-5">
				<h5 class="title is-5">Order Layout</h5>
				<div class="panel panel-default">
					<div class="panel-heading">Header</div>
					<div class="panel-body">
						<ul class="list-group page-layout"></ul>
					</div>
					<div class="panel-footer">Footer</div>
				</div>
				<br/>
			</div>
		</div>

		<hr>
	
		<div class="columns">
			<div class="column is-6">
				<h5 class="title is-5">Custom CSS</h5>
				<div class="custom-css" data-language="css"></div>
			</div>
			<div class="column is-6">
				<h5 class="title is-5">Custom JS</h5>
				<div class="custom-js" data-language="javascript"></div>
			</div>
		</div>
	</form>
{% endblock %}

{% block sidebar %}
	<p class="subtitle is-5">Create Layout</p>
	<a href="layouts/create" class="save-layout button is-success">Create</a>
	<hr>
	<h5><strong>Note</strong></h5>
	<p class="muted">Components are defined by their names, if you name two the same, they will overwrite each other.</p>
{% endblock %}
